<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/whiteBG"
    android:layout_margin="35dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:enabled="false"
        android:id="@+id/topic_1"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="23dp"
        android:text="@string/topic_1"
        android:textColor="#FFE9E9E9"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:enabled="false"
        android:id="@+id/topic_2"
        android:layout_marginBottom="23dp"
        android:text="@string/topic_2"
        android:textColor="#FFE9E9E9"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:enabled="false"
        android:id="@+id/topic_3"
        android:layout_marginBottom="23dp"
        android:text="@string/topic_3"
        android:textColor="#FFE9E9E9"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_marginBottom="23dp"
        android:id="@+id/loadingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/loadingText"
        android:text="Validating course files..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>